<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="220dp"
        android:layout_height="88dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="116dp"
        android:background="#C1FFFFFF"
        android:backgroundTint="#006064"
        android:text="Calculate Simple Interest"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="84dp"
        android:layout_height="76dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/p" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="71dp"
        android:layout_height="70dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/r" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="77dp"
        android:layout_height="72dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/timetable" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="83dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/calculate" />

    <TextView
        android:id="@+id/show1"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="48dp"
        android:background="#006064"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/principle"
        android:layout_width="189dp"
        android:layout_height="77dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="56dp"
        android:ems="10"
        android:hint="Enter principle amount"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#DF2A2A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rate"
        android:layout_width="213dp"
        android:layout_height="75dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Enter the rate of interest"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#070202"
        android:textColorHint="#B61616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/principle" />

    <EditText
        android:id="@+id/time"
        android:layout_width="195dp"
        android:layout_height="58dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:hint="Enter the year"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#070101"
        android:textColorHint="#AE1B1B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate" />
</androidx.constraintlayout.widget.ConstraintLayout>